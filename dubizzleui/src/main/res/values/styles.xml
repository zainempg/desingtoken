<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dbzSemibold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/dbz_semi_bold</item>
        <item name="fontFamily">@font/dbz_semi_bold</item>
    </style>

    <style name="dbzBold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/dbz_bold</item>
        <item name="fontFamily">@font/dbz_bold</item>
    </style>

    <style name="dbzRegular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/dbz_regular</item>
        <item name="fontFamily">@font/dbz_regular</item>
    </style>

    <!--Headings-->
    <style name="dbzHeading" parent="dbzSemibold" >
        <item name="android:textColor">@color/grey90</item>
    </style>

    <style name="dbzHeading.L">
        <item name="android:textSize">@dimen/heading_text_size_l</item>
    </style>

    <style name="dbzHeading.M">
        <item name="android:textSize">@dimen/heading_text_size_m</item>
    </style>

    <style name="dbzHeading.S">
        <item name="android:textSize">@dimen/heading_text_size_s</item>
    </style>

    <style name="dbzHeading.XS">
        <item name="android:textSize">@dimen/heading_text_size_xs</item>
    </style>


    <!--Label-->
    <style name="dbzLabel" parent="dbzSemibold">
        <item name="android:textColor">@color/grey90</item>

    </style>

    <style name="dbzLabel.L">
        <item name="android:textSize">@dimen/label_l</item>
    </style>

    <style name="dbzLabel.M">
        <item name="android:textSize">@dimen/label_m</item>
    </style>

    <style name="dbzLabel.S">
        <item name="android:textSize">@dimen/label_s</item>
    </style>
    <style name="dbzLabel.XS">
        <item name="android:textSize">@dimen/label_xs</item>
    </style>

    <!--    Paragraph-->
    <style name="dbzParagraph" parent="dbzRegular">
        <item name="android:textColor">@color/grey90</item>

    </style>

    <style name="dbzParagraph.L">
        <item name="android:textSize">@dimen/paragraph_l</item>
    </style>

    <style name="dbzParagraph.M">
        <item name="android:textSize">@dimen/paragraph_m</item>
    </style>

    <style name="dbzParagraph.S">
        <item name="android:textSize">@dimen/paragraph_s</item>
    </style>
    <style name="dbzParagraph.XS">
        <item name="android:textSize">@dimen/paragraph_xs</item>
    </style>


</resources>