<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Semibold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/semi_bold</item>
    </style>

    <style name="Bold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Regular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/regular</item>
    </style>


    <!--Headings-->

    <style name="Heading" parent="Semibold" />

    <style name="Heading.L">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Heading.M">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Heading.S">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Heading.XS">
        <item name="android:textSize">18sp</item>
    </style>


    <!--Label-->
    <style name="Label" parent="Semibold" />


    <style name="Label.L">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Label.M">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Label.S">
        <item name="android:textSize">12sp</item>
    </style>

    <!--    Paragraph-->

    <style name="Paragraph" parent="Semibold" />

    <style name="Paragraph.L">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Paragraph.M">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Paragraph.S">
        <item name="android:textSize">12sp</item>
    </style>


</resources>