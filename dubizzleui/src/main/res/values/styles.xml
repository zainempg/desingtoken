<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Semibold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/semi_bold</item>
    </style>

    <style name="Bold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Regular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/regular</item>
    </style>


    <!--Headings-->

    <style name="Heading" parent="Semibold" />

    <style name="Heading.L">
        <item name="android:textSize">@dimen/heading_text_size_l</item>
    </style>

    <style name="Heading.M">
        <item name="android:textSize">@dimen/heading_text_size_m</item>

    </style>

    <style name="Heading.S">
        <item name="android:textSize">@dimen/heading_text_size_s</item>
    </style>

    <style name="Heading.XS">
        <item name="android:textSize">@dimen/heading_text_size_xs</item>
    </style>


    <!--Label-->
    <style name="Label" parent="Semibold" />

    <style name="Label.L">
        <item name="android:textSize">@dimen/label_l</item>
    </style>

    <style name="Label.M">
        <item name="android:textSize">@dimen/label_m</item>
    </style>

    <style name="Label.S">
        <item name="android:textSize">@dimen/label_s</item>
    </style>

    <!--    Paragraph-->

    <style name="Paragraph" parent="Regular" />

    <style name="Paragraph.L">
        <item name="android:textSize">@dimen/paragraph_l</item>
    </style>

    <style name="Paragraph.M">
        <item name="android:textSize">@dimen/paragraph_m</item>
    </style>

    <style name="Paragraph.S">
        <item name="android:textSize">@dimen/paragraph_s</item>
    </style>


</resources>